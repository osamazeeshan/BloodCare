<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/requester_map_snap_shot"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:scaleType="centerCrop"
        android:src="@drawable/google_map_holder"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginEnd="-10dp"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="-30dp"
        android:background="@mipmap/nearby_donor_card">

        <TextView
            android:id="@+id/requester_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="35dp"
            android:text="Request Name"/>

        <TextView
            android:id="@+id/requester_blood_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:textSize="16sp"
            android:layout_below="@+id/requester_name"
            android:text="Blood Type: "/>

        <TextView
            android:id="@+id/requester_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/requester_blood_type"
            android:text="Status: "/>

        <Button
            android:id="@+id/request_pending_btn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="45dp"
            android:layout_marginBottom="5dp"
            android:textSize="12sp"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:background="#A6FF0000"
            android:text="Request Pending"
            android:layout_below="@+id/requester_blood_type"/>

        <TextView
            android:id="@+id/requester_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="45dp"
            android:layout_marginEnd="45dp"
            android:text="DateTime"/>


    </RelativeLayout>

</LinearLayout>