<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/info_window_donor_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/round_place_holder"/>

    <LinearLayout
        android:id="@+id/info_window_detail_container"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/info_window_donor_img"
        android:orientation="vertical"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/info_window_donor_name"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="Name"/>

        <TextView
            android:id="@+id/info_window_donor_blood_type"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_below="@id/info_window_donor_name"
            android:text="Blood Type: B+"/>

        <TextView
            android:id="@+id/info_window_donor_distance"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_below="@id/info_window_donor_blood_type"
            android:text="Distnace: 70 km"/>

    </LinearLayout>

</RelativeLayout>