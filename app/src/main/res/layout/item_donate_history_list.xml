<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/donate_map_snap_shot"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:scaleType="centerInside"
        android:src="@drawable/google_map_holder"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="-30dp"
        android:background="@mipmap/nearby_donor_card">

        <TextView
            android:id="@+id/donate_to_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="35dp"
            android:text="Donate to: "/>

        <TextView
            android:id="@+id/donate_blood_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:textSize="16sp"
            android:layout_below="@+id/donate_to_name"
            android:text="Blood Type: "/>

        <TextView
            android:id="@+id/donate_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:textSize="16sp"
            android:layout_below="@+id/donate_blood_type"
            android:text="Status: "/>

        <TextView
            android:id="@+id/donate_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:textSize="16sp"
            android:layout_below="@+id/donate_status"
            android:text="Distance: "/>

        <TextView
            android:id="@+id/donate_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="45dp"
            android:layout_marginEnd="45dp"
            android:text="DateTime"/>


    </RelativeLayout>

</LinearLayout>